<%- model_class = Video -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1" style="border: 1px solid #eee; padding: 30px; background: #eeefff;">
    <div align="center">
      Title / Name: <%= @video.name %> <br><br>
      Created by: <%= User.find(@video.user_id).email %> <br><br>
      Category: <%= @video.category.name %> <br><br>
      <%= raw(youtube_embed(@video.url)) %>
    </div>
  </div>
</div>



<%= link_to t('.back', :default => t("helpers.links.back")),
              videos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_video_path(@video), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              video_path(@video),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
